<% layout('layouts/boilerplate') -%>

<form action="/posts/<%= post.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
  <div class="form-group">
    <label for="input-title">Title</label>
    <input type="text" class="form-control" id="input-title" name="post[title]" value="<%= post.title %>" placeholder="Title">
  </div>
  <div class="form-group">
    <label for="input-location">Location</label>
    <input type="text" class="form-control" id="input-location" name="post[location]" value="<%= post.location %>" placeholder="Location">
  </div>
  <div class="form-group">
  	<label for="select-condition">Condition</label>
  	<select class="form-control" id="select-condition" name="post[condition]">
			<option value="" selected disabled>Select Condition</option>
  	  <option value="excellent">Excellent</option>
  	  <option value="good">Good</option>
  	  <option value="poor">Poor</option>
  	</select>
  </div>
  <div class="form-group">
	  <label for="textarea-body">Description</label>
	  <textarea class="form-control" rows="3" id="textarea-body" name="post[description]" placeholder="Description"><%= post.description %></textarea>
  </div>
  <div class="form-group">
    <label class="sr-only" for="input-amount">Price</label>
    <div class="input-group">
      <div class="input-group-addon">$</div>
      <input type="text" class="form-control" id="input-amount" name="post[price]" value="<%= post.price %>" placeholder="Price">
      <div class="input-group-addon">.00</div>
    </div>
  </div>
  <div class="form-group">
    <label for="input-image">Image</label>
    <input type="file" id="input-image" name="image" accept="image/*">
  </div>

  <button type="submit" class="btn btn-default">Update</button>
</form>