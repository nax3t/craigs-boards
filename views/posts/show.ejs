<% layout('layouts/boilerplate') -%>

<% include ../partials/login-modal %>

<div class="row">

  <div class="col-lg-3">
    <h1 class="my-4"><%= post.title %></h1>
    <hr>
    <div class="card">
      <div class="card-body">
				<h3>$<%= post.price %>.00</h3>
				<p><%= post.location %></p>
      </div>
			<div id="map"></div>
    </div>
  </div>
  <!-- /.col-lg-3 -->

  <div class="col-lg-9">

    <div class="card mt-4">
      <img class="card-img-top img-fluid" src="<%= post.image %>" alt="<%= post.title %>">
      <div class="card-body">
        <p>Posted by: <%= post.author.local.username || post.author.facebook.name %> <%= moment(post.createdAt).fromNow() %></p>
        <hr>
        <p class="card-text"><%- post.description %></p>
        <% if(currentUser && currentUser.equals(post.author)) { %>
        <a class="btn btn-outline-warning" href="/posts/<%= post.id %>/edit" role="button">Edit</a>
        <form action="/posts/<%= post.id %>?_method=DELETE" method="POST" class="delete-form">
        	<input type="submit" class="btn btn-outline-danger" value="Delete">
        </form>
        <% } %>
      </div>
    </div>
    <!-- /.card -->

    <div class="card card-outline-secondary my-4">
      <div class="card-header">
        Reviews
      </div>
      <div class="card-body" id="reviews">
      	<% post.reviews.forEach(function(review) { %>
        <p><%- review.body %></p>
        <small class="text-muted">Posted by <%= review.author.local.username || review.author.facebook.name %> <%= moment(review.createdAt).fromNow() %></small>
        <hr>
      	<% }); %>
        <button class="btn btn-success" id="toggle-review">Leave a Review</button>
        <form action="/posts/<%= post.id %>/reviews" class="mt-2" id="review-form">
        	<div class="form-group">
        	  <label for="review-body">Body</label>
        	  <textarea class="form-control" id="review-body" rows="3" name="review[body]" placeholder="Tell us how you feel..."></textarea>
        	</div>
        	<button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>
    <!-- /.card -->

  </div>
  <!-- /.col-lg-9 -->

</div>

<script>
	function initMap() {
	  var lat = <%= post.lat %>;
	  var lng = <%= post.lng %>;
	  var center = {lat: lat, lng: lng };
	  var map = new google.maps.Map(document.getElementById('map'), {
	      zoom: 8,
	      center: center,
	      scrollwheel: false
	  });
	  var contentString = `
	    <p>
        <strong><%= post.title %></strong><br>
        <small><%= post.location %></small>
      </p>
	  `
	  var infowindow = new google.maps.InfoWindow({
	    content: contentString
	  });
	  var marker = new google.maps.Marker({
	      position: center,
	      map: map
	  });
	  marker.addListener('click', function() {
	    infowindow.open(map, marker);
	  });
	}
</script>

<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBkG51lwJtDvYFKTBdRZlhzYg1D4QFsXPU&callback=initMap"></script>
